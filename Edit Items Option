#include <stdio.h>
#include <string.h>

int main(void)
{


    char itemCode[8];
    char itemName[25];
    double price;
    int quantity;
	FILE *fp1;
	FILE *fp2;
	char itemCodeInput[8];
	int itemFound;
	int Name = 1;
	int Price = 2;
	int Quantity = 3;
	int ch;
	char newItemName[30];
	double newPrice;
	int newQuantity;

	if((fp1 = fopen("purchase.txt", "r") == NULL)){
        puts("No file found.");
        puts("Please contact your system administrator.");
        return;
	}

	fp2 = fopen("tempPurchase.txt", "w"); //open temp file

	puts("------------------------------------");
	puts("Edit Items");
	puts("------------------------------------");
	puts("Enter -1 to cancel transaction");
	puts("");

	printf("Enter the item code to be edited: ");
	scanf("%s", itemCodeInput);

	while (strcmp(itemCodeInput, "-1") != 0){ //start transaction

        do{ // check if item match in purchase.txt
            fscanf(fp1, " %9[^;];%25[^;];%lf;%d", itemCode, itemName, &price, &quantity);
            if (strcmp(itemCodeInput, itemCode) == 0){
                itemFound = 1;
                break;
            }
        }while (!feof(fp1));

        if (itemFound == 0){ //if item cant be found
            printf("Item cannot be found.\n");
        }

        else if (itemFound == 1){ //if item found
            printf ("Item found\n\n");
            //print out selected item from purchase.txt
			puts("Code       Name                     Price      Stock");
			printf("%-10s %-24s %-10.2lf %-10d\n", itemCode, itemName, price, quantity);
            puts("");

            printf("Which would you like to edit? (Name/Price/Quantity)\n");
            ch = getchar(); // get Name/Price/Quantity in terms of 1/2/3
            scanf("%c", &ch);

            if (ch == Name){ //If 1 chosen
                printf("Change name of item.\n");
                printf("Please enter the new name: ");
                scanf("%s", newItemName); //get the new name of the item

                fprintf(fp2, "%s; %s; %.2lf; %d\n", itemCodeInput, newItemName, price, newQuantity);
                // print to tempPurchase.txt the edited item
            }

            if (ch == Price){ //If 2 chosen
                printf("Change the price of item.\n");
                printf("Please enter the new price: ");
                scanf("%f", &newPrice); //get the new price of the item

                fprintf(fp2, "%s; %s; %.2lf; %d\n", itemCodeInput, itemName, newPrice, quantity);
                // print to tempPurchase.txt the edited item
            }

            if (ch == Quantity){ //If 3 chosen
                printf("Change the quantity of item.\n");
                printf("Please enter the new quantity: ");
                scanf("%d", &newQuantity); //get the new quantity of the item

                fprintf(fp2, "%s; %s; %.2lf; %d\n", itemCodeInput, itemName, price);
                //print to tempPurchase.txt the edited item
            }

        } //end to if item found

                do{ //printing the rest of the purchase.txt to tempPurchase.txt
                    fscanf(fp1, " %9[^;];%25[^;];%lf;%d", itemCode, itemName, &price, &quantity);
                    if (strcmp(itemCodeInput, itemCode) != 0){ //skipping the edited item
                        fprintf(fp2, "%s ; %s ; %.2lf ; %d\n", itemCode, itemName, price, quantity);
                    }
                }while (!feof(fp2));

            fclose(fp1);
            fclose(fp2);
            remove("purchase.txt");
            rename("tempPurchase.txt", "purchase.txt");

            printf("Enter the item code to be edited: ");
            scanf("%s", itemCodeInput);

        } //end to while loop

        printf("Transaction cancelled.\n");

}
